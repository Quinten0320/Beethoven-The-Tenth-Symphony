<Page 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="BeetHovenWPF.EndMenu"
    Title="End Menu">

    <Grid Background="Black" Opacity="0.9">
        <!-- Define rows and columns for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- For Title -->
            <RowDefinition Height="*" />
            <!-- For Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title: Song Finished -->
        <TextBlock Text="SONG FINISHED!" Foreground="White" FontSize="50" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Row="0" Grid.ColumnSpan="3" />

        <!-- Buttons -->
        <Button Content="Exit" Width="200" Height="50"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Click="ExitClick" />

        <Button Content="Scores" Width="200" Height="50"
                Grid.Row="1" Grid.Column="1"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Click="ScoresClick" />
    </Grid>
</Page>
