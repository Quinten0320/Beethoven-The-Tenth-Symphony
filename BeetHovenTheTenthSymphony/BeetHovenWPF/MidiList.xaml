<Window x:Class="BeetHovenWPF.MidiList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MidiList" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap" Text="Songs:" VerticalAlignment="Top" FontSize="24"/>
        <DataGrid x:Name="MidiFileList" Margin="0,39,0,0" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="MidiFileList_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
