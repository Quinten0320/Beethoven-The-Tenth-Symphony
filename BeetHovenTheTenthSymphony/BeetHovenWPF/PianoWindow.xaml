<Window x:Class="BeetHovenWPF.PianoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PianoWindow" 
        Height="800" Width="800" 
        ResizeMode="CanResize"
        SizeToContent="Manual"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Empty space above piano -->
            <RowDefinition Height="*" />
            <!-- Piano area -->
        </Grid.RowDefinitions>

        <Canvas  Name="PianoCanvas" Background="White" Grid.Row="1"  />
        <Label Content="Last pressed key:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="LastPressedNoteTextBox" HorizontalAlignment="Left" Margin="111,14,0,0" 
         TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="60" IsReadOnly="True" />
    </Grid>
    
</Window>
