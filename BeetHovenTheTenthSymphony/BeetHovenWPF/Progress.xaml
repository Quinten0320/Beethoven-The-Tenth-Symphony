<Page x:Class="BeetHovenWPF.Progress"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeetHovenWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Progress">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="LevelTextBlock" FontSize="32" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock x:Name="XPTextBlock" FontSize="28" TextAlignment="Center"/>
            <ProgressBar x:Name="XPProgressBar" Width="300" Height="30" Minimum="0" Maximum="1000" Value="0" Margin="0,20,0,0"/>
            <TextBlock x:Name="XPProgressLabel" FontSize="18" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>