<Window x:Class="BeetHovenWPF.LevelUpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LEVEL UP!" Height="280" Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Border CornerRadius="20" 
                Padding="25" 
                BorderBrush="#FFD700" 
                BorderThickness="3">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1E1B2E" Offset="0.0"/>
                    <GradientStop Color="#FF2A223F" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="LEVEL UP!" 
                           FontSize="38" 
                           FontWeight="Black"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,12">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="12" Color="#FFD700" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="🎉 Congratulations! 🎉" 
                           FontSize="20" 
                           Foreground="#FFD700"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           Margin="0,0,0,25" />

                <Button Content="Continue" Width="130" Height="42" 
                        Background="#FFD700" 
                        Foreground="Black"
                        FontWeight="Bold"
                        Click="Ok_Click"
                        Cursor="Hand"
                        BorderBrush="#FFD700"
                        BorderThickness="0"
                        HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>