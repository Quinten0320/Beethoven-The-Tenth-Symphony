<Window x:Class="BeetHovenWPF.Achievements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeetHovenWPF"
        xmlns:converters="clr-namespace:BeetHovenWPF.Converters"
        mc:Ignorable="d"
        Title="Achievements" Height="450" Width="800">
    <Window.Resources>
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="10">
        <ScrollViewer>
            <ItemsControl Name="AchievementsList" Margin="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" CornerRadius="5" Margin="5" Padding="10"
                                Background="{Binding IsBehaald, Converter={StaticResource BoolToBrushConverter}}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Name}" />
                                <TextBlock FontStyle="Italic" Text="{Binding Description}" />
                                <TextBlock FontSize="12" Foreground="Gray"
                                           Text="{Binding DatumBehaald, StringFormat='Behaald op: {0:dd-MM-yyyy HH:mm}'}"
                                           Visibility="{Binding IsBehaald, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
